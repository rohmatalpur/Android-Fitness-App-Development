<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with Material 3 -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 Primary Colors -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_soft</item>
        <item name="colorOnPrimaryContainer">@color/purple_dark</item>

        <!-- Material Design 3 Secondary Colors -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/purple_extra_light</item>
        <item name="colorOnSecondaryContainer">@color/purple_dark</item>

        <!-- Material Design 3 Tertiary Colors -->
        <item name="colorTertiary">@color/lightblue</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/surface_2</item>
        <item name="colorOnTertiaryContainer">@color/text_primary</item>

        <!-- Status bar & Navigation bar -->
        <item name="android:statusBarColor">@color/purple</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/surface_1</item>
        <item name="colorSurface">@color/surface_1</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_2</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Error colors -->
        <item name="colorError">@color/button_danger</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_soft</item>
        <item name="colorOnErrorContainer">@color/button_danger_pressed</item>

        <!-- Outline -->
        <item name="colorOutline">@color/divider_dark</item>
        <item name="colorOutlineVariant">@color/divider_light</item>

        <!-- Enable Material 3 dynamic colors -->
        <item name="materialCardViewElevatedStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="materialCardViewFilledStyle">@style/Widget.Material3.CardView.Filled</item>
        <item name="materialCardViewOutlinedStyle">@style/Widget.Material3.CardView.Outlined</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.Material3.BottomNavigationView</item>

        <!-- FAB -->
        <item name="floatingActionButtonStyle">@style/Widget.Material3.FloatingActionButton.Primary</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.Material3.ExtendedFloatingActionButton.Primary</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Material3.Button.OutlinedButton</item>

        <!-- Text Fields -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>

        <!-- Switches -->
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>

        <!-- Progress Indicators -->
        <item name="circularProgressIndicatorStyle">@style/Widget.Material3.CircularProgressIndicator</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.Material3.LinearProgressIndicator</item>

        <!-- Enable Activity Transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Material Motion -->
        <item name="motionDurationLong1">500</item>
        <item name="motionDurationMedium1">250</item>
        <item name="motionDurationShort1">100</item>
        <item name="motionEasingStandard">cubic-bezier(0.4, 0.0, 0.2, 1)</item>

        <!-- Shape Theming -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <style name="Theme.Project" parent="Base.Theme.Project" />

    <!-- ==================== Custom Button Styles ==================== -->

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.App.Button.Success" parent="Widget.App.Button">
        <item name="backgroundTint">@color/button_success</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.App.Button.Danger" parent="Widget.App.Button">
        <item name="backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.App.Button.Info" parent="Widget.App.Button">
        <item name="backgroundTint">@color/button_info</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/purple</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="rippleColor">@color/ripple_purple</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/purple</item>
        <item name="rippleColor">@color/ripple_purple</item>
    </style>

    <!-- ==================== Custom Card Styles ==================== -->

    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/ripple_black</item>
    </style>

    <style name="Widget.App.Card.Elevated" parent="Widget.App.Card">
        <item name="cardElevation">12dp</item>
    </style>

    <style name="Widget.App.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="Widget.App.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/surface_2</item>
    </style>

    <style name="Widget.App.Card.Glassmorphism" parent="Widget.App.Card">
        <item name="cardBackgroundColor">@color/glass_white</item>
        <item name="strokeColor">@color/glass_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- ==================== FAB Styles ==================== -->

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/purple</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
        <item name="rippleColor">@color/ripple_white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <!-- ==================== Text Input Styles ==================== -->

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/purple</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/purple</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Widget.App.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxBackgroundColor">@color/surface_2</item>
    </style>

    <!-- ==================== Bottom Navigation Style ==================== -->

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/purple</item>
        <item name="itemTextColor">@color/purple</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigationView.ActiveIndicator</item>
        <item name="itemRippleColor">@color/ripple_purple</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/purple_extra_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <!-- ==================== Toolbar Styles ==================== -->

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/purple</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.App.Toolbar.Transparent" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- ==================== Text Styles ==================== -->

    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- ==================== Switch Styles ==================== -->

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/purple</item>
        <item name="trackDecorationTint">@color/divider_dark</item>
    </style>

    <!-- ==================== Progress Indicator Styles ==================== -->

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/purple</item>
        <item name="trackColor">@color/surface_3</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
    </style>

    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/purple</item>
        <item name="trackColor">@color/surface_3</item>
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">2dp</item>
    </style>

    <!-- ==================== Chip Styles ==================== -->

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">@color/purple_extra_light</item>
        <item name="android:textColor">@color/purple</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="rippleColor">@color/ripple_purple</item>
    </style>

    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipBackgroundColor">@color/surface_2</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ==================== Dialog Styles ==================== -->

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Material3.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button.Text</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <!-- ==================== Ripple Effects ==================== -->

    <style name="RippleEffect">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="RippleEffect.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
